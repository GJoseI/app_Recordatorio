<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondoOscuro"
    tools:context=".activities.CrearAlarmaActivity">

    <!-- ðŸ”˜ Contenedor principal para cambio de fondo -->
    <LinearLayout
        android:id="@+id/layoutPrincipal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/fondoOscuro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="244dp"
            android:layout_height="39dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_edittext_redondeado"
            android:backgroundTint="@color/fondoTituloOscuro"
            android:padding="5dp"
            android:text="@string/tituloNuevaAlarma"
            android:textAlignment="center"
            android:textSize="20sp" />

        <!-- ðŸ”˜ Switch de modo claro -->
        <Switch
            android:id="@+id/swModo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tema claro"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/letraBlanca" />

        <ScrollView
            android:id="@+id/svNuevaAlarma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TimePicker
                    android:id="@+id/tpHora"
                    android:layout_width="273dp"
                    android:layout_height="159dp"
                    android:layout_marginTop="44dp"
                    android:amPmTextColor="@color/letraBlanca"
                    android:background="@color/fondoElementoOscuro"
                    android:textColor="@color/letraBlanca"
                    android:theme="@style/Theme.Oscuro"
                    android:timePickerMode="spinner"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- âœ… DÃ­as -->
                <LinearLayout
                    android:id="@+id/layoutDias"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/tpHora"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <ToggleButton
                        android:id="@+id/btDom"
                        android:layout_width="48dp"
                        android:layout_height="55dp"
                        android:background="@drawable/btn_dia"
                        android:textColor="@color/toggle_color"
                        android:textOff="@string/domAlarma"
                        android:textOn="@string/domAlarma"
                        android:layout_marginEnd="5dp" />

                    <ToggleButton
                        android:id="@+id/btLu"
                        android:layout_width="48dp"
                        android:layout_height="55dp"
                        android:background="@drawable/btn_dia"
                        android:textColor="@color/toggle_color"
                        android:textOff="@string/luAlarma"
                        android:textOn="@string/luAlarma"
                        android:layout_marginEnd="5dp" />

                    <ToggleButton
                        android:id="@+id/btMar"
                        android:layout_width="48dp"
                        android:layout_height="55dp"
                        android:background="@drawable/btn_dia"
                        android:textColor="@color/toggle_color"
                        android:textOff="@string/marAlarma"
                        android:textOn="@string/marAlarma"
                        android:layout_marginEnd="5dp" />

                    <ToggleButton
                        android:id="@+id/btMie"
                        android:layout_width="48dp"
                        android:layout_height="55dp"
                        android:background="@drawable/btn_dia"
                        android:textColor="@color/toggle_color"
                        android:textOff="@string/mieAlarma"
                        android:textOn="@string/mieAlarma"
                        android:layout_marginEnd="5dp" />

                    <ToggleButton
                        android:id="@+id/btJue"
                        android:layout_width="48dp"
                        android:layout_height="55dp"
                        android:background="@drawable/btn_dia"
                        android:textColor="@color/toggle_color"
                        android:textOff="@string/jueAlarma"
                        android:textOn="@string/jueAlarma"
                        android:layout_marginEnd="5dp" />

                    <ToggleButton
                        android:id="@+id/btVie"
                        android:layout_width="48dp"
                        android:layout_height="55dp"
                        android:background="@drawable/btn_dia"
                        android:textColor="@color/toggle_color"
                        android:textOff="@string/vieAlarma"
                        android:textOn="@string/vieAlarma"
                        android:layout_marginEnd="5dp" />

                    <ToggleButton
                        android:id="@+id/btSa"
                        android:layout_width="48dp"
                        android:layout_height="55dp"
                        android:background="@drawable/btn_dia"
                        android:textColor="@color/toggle_color"
                        android:textOff="@string/saAlarma"
                        android:textOn="@string/saAlarma" />
                </LinearLayout>

                <Spinner
                    android:id="@+id/spAlarmaTono"
                    android:layout_width="315dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="28dp"
                    android:background="@drawable/spinner_background"
                    app:layout_constraintTop_toBottomOf="@id/layoutDias"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <Button
                    android:id="@+id/btnSeleccionarImagenAlarma"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:text="AGREGAR IMAGEN (OPCIONAL)"
                    app:layout_constraintTop_toBottomOf="@+id/spAlarmaTono"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <EditText
                    android:id="@+id/etDesc"
                    android:layout_width="343dp"
                    android:layout_height="207dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/bg_edittext_redondeado"
                    android:backgroundTint="@color/fondoElementoOscuro"
                    android:gravity="start"
                    android:hint="Contenido"
                    android:inputType="textMultiLine"
                    android:textColor="@color/letraBlanca"
                    android:textColorHint="@color/letraGris"
                    android:padding="4dp"
                    app:layout_constraintTop_toBottomOf="@+id/btnSeleccionarImagenAlarma"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    app:layout_constraintTop_toBottomOf="@+id/etDesc"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <Button
                        android:id="@+id/btnCancelar"
                        android:layout_width="150dp"
                        android:layout_height="60dp"
                        android:backgroundTint="@color/material_dynamic_neutral30"
                        android:text="@string/btnCancelar" />

                    <Button
                        android:id="@+id/btnGuardar"
                        android:layout_width="150dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="40dp"
                        android:backgroundTint="@android:color/holo_green_dark"
                        android:text="@string/btnCrear" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
