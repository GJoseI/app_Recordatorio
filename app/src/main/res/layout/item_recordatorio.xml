<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="4dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="4dp"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/tvTitulo"
                android:layout_width="313dp"
                android:layout_height="wrap_content"
                android:text="DescripciÃ³n del recordatorio"
                android:textColor="@color/letraGris"
                android:textSize="20sp"
                android:textStyle="bold" />
            <ImageButton
                android:id="@+id/btnEditar"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Editar"
                android:src="@drawable/edit_24px"
                android:scaleType="fitCenter"
                card_view:tint="@color/letraGris" />
            <ImageButton
                android:id="@+id/btnBorrar"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Eliminar"
                android:src="@drawable/delete_24px"
                android:scaleType="fitCenter"
                card_view:tint="@color/letraGris"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="378dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDias"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="L, M, X"
                android:textColor="@color/letraGris"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="379dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <Switch
                android:id="@+id/sEstado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:scaleX="1.5"
                android:scaleY="1.5" />

            <View
                android:layout_width="195dp"
                android:layout_height="2dp"
                android:layout_weight="1" />


            <TextView
                android:id="@+id/tvHora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="8"
                android:textColor="@color/letraGris"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/tvDosPuntos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textColor="@color/letraGris"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/tvMinutos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15"
                android:textColor="@color/letraGris"
                android:textSize="50sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
